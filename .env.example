# Application Environment
NODE_ENV=development
SITE_URL=http://localhost:4321
API_URL=https://api.megawe.net

# KV Namespace IDs (get from Cloudflare dashboard)
# These should be set as environment variables in production
SESSION_KV_ID=0a77c7bec89b44e3a02a779ab516f24c
CACHE_KV_ID=0a77c7bec89b44e3a02a779ab516f24c
SESSION_KV_PREVIEW_ID=0a77c7bec89b44e3a02a779ab516f24c

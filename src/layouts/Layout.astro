---
import '../styles/global.css'
import { SITE_TITLE, SITE_DESCRIPTION } from '../lib/constants'
import CookieConsent from '../components/CookieConsent.astro'

export interface Props {
  title?: string
  description?: string
  image?: string
  type?: string
  noIndex?: boolean
  canonical?: string
}

const {
  title = SITE_TITLE,
  description = SITE_DESCRIPTION,
  image = '/images/og-image.jpg',
  type = 'website',
  noIndex = false,
  canonical = Astro.url.pathname
} = Astro.props

const fullTitle = title === SITE_TITLE ? title : `${title} | ${SITE_TITLE}`
const fullUrl = `https://megawe.net${canonical}`
const imageUrl = `https://megawe.net${image}`
---

<!doctype html>
<html lang="id" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="canonical" href={fullUrl} />
    {noIndex && <meta name="robots" content="noindex, nofollow" />}

    <!-- Preconnect to external domains -->
    <link rel="preconnect" href="https://api.megawe.net" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Inter Font -->
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'" />
    <noscript>
      <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" />
    </noscript>

    <!-- Critical CSS inlined -->
    <style>
      :root {
        /* Indonesian-inspired color system */
        --color-primary: #dc2626;
        --color-primary-hover: #b91c1c;
        --color-primary-light: #fef2f2;
        --color-secondary: #059669;
        --color-secondary-hover: #047857;
        --color-secondary-light: #ecfdf5;
        --color-accent: #ea580c;
        --color-accent-hover: #c2410c;
        --color-accent-light: #fff7ed;
        --color-background: #ffffff;
        --color-surface: #f9fafb;
        --color-text: #111827;
        --color-text-light: #6b7280;
        --color-border: #e5e7eb;
        --font-sans: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
        --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1);
        --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1);
        --shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.1);
        --radius: 0.75rem;
        --transition: 200ms ease;
      }

      * {
        box-sizing: border-box;
      }

      html {
        font-family: var(--font-sans);
        line-height: 1.6;
        color-scheme: light;
        font-feature-settings: 'cv02', 'cv03', 'cv04', 'cv11';
      }

      body {
        margin: 0;
        background-color: var(--color-background);
        color: var(--color-text);
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        text-rendering: optimizeSpeed;
        font-weight: 400;
      }

      img {
        max-width: 100%;
        height: auto;
        display: block;
      }

      a {
        color: var(--color-primary);
        text-decoration: none;
        transition: color var(--transition);
      }

      a:hover {
        color: var(--color-primary-hover);
      }

      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
      }

      .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border: 0;
      }

      .focus-visible:focus {
        outline: 2px solid var(--color-primary);
        outline-offset: 2px;
      }
    </style>

    <!-- SEO Meta Tags -->
    <title>{fullTitle}</title>
    <meta name="title" content={fullTitle} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={imageUrl} />
    <meta property="og:url" content={fullUrl} />
    <meta property="og:type" content={type} />
    <meta property="og:locale" content="id_ID" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={imageUrl} />

    <!-- Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "Megawe",
        "description": "Indonesian Job Vacancy Aggregator",
        "url": "https://megawe.net",
        "inLanguage": "id-ID",
        "publisher": {
          "@type": "Organization",
          "name": "Megawe",
          "url": "https://megawe.net"
        }
      }
    </script>

    <!-- Non-critical CSS deferred -->
    <link rel="stylesheet" href="/styles/components.css" media="print" onload="this.media='all'" />
    <noscript>
      <link rel="stylesheet" href="/styles/components.css" />
    </noscript>
  </head>
  <body>
    <a href="#main-content" class="sr-only focus-visible:not-sr-only">
      Skip to main content
    </a>

    <header>
      <nav class="sticky top-0 z-50 bg-white/98 backdrop-blur-md border-b border-gray-100/50 shadow-sm" role="navigation" aria-label="Main navigation">
        <div class="container mx-auto px-8 py-6 lg:py-8">
          <div class="flex items-center justify-between">
            <!-- Professional Logo with better spacing -->
            <a href="/" class="flex items-center gap-5 group transition-all duration-200 hover:scale-[1.02]" aria-label="Megawe Home">
              <div class="w-14 h-14 bg-gradient-to-br from-red-600 to-red-700 rounded-xl flex items-center justify-center shadow-lg group-hover:shadow-xl group-hover:-rotate-2 transition-all duration-300">
                <svg class="w-8 h-8 text-white" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                  <path d="M12 2L2 7v10c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-10-5z"/>
                </svg>
              </div>
              <div class="flex flex-col">
                <span class="text-3xl lg:text-4xl font-bold bg-gradient-to-r from-red-600 to-red-700 bg-clip-text text-transparent leading-tight">
                  Megawe
                </span>
                <span class="text-sm text-gray-500 hidden sm:block">Lowongan Kerja Indonesia</span>
              </div>
            </a>

            <!-- Well-spaced Desktop Navigation -->
            <div class="hidden xl:flex items-center gap-16">
              <div class="flex items-center gap-12">
                <a href="/jobs" class="text-gray-700 hover:text-red-600 transition-colors duration-200 font-medium text-base lg:text-lg">Lowongan</a>
                <a href="/employers" class="text-gray-700 hover:text-red-600 transition-colors duration-200 font-medium text-base lg:text-lg">Perusahaan</a>
                <a href="/career-advice" class="text-gray-700 hover:text-red-600 transition-colors duration-200 font-medium text-base lg:text-lg">Karir Tips</a>
              </div>
            </div>

            <!-- Professional Action Buttons -->
            <div class="hidden lg:flex items-center gap-6">
              <button class="px-6 py-3 text-red-600 hover:bg-red-50 rounded-lg transition-all duration-200 font-medium text-base border border-red-200">
                Masuk
              </button>
              <button class="px-6 py-3 bg-gradient-to-r from-red-600 to-red-700 text-white rounded-lg hover:from-red-700 hover:to-red-800 transition-all duration-200 font-semibold text-base shadow-md hover:shadow-lg">
                Daftar
              </button>
            </div>

            <!-- Mobile Menu Button - Larger touch target -->
            <button
              type="button"
              class="lg:hidden p-4 rounded-lg hover:bg-gray-100 transition-all duration-200 touch-manipulation"
              aria-label="Toggle navigation menu"
              aria-expanded="false"
              aria-controls="mobile-menu"
            >
              <svg class="w-7 h-7 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </button>
          </div>

          <!-- Improved Mobile Menu with better spacing -->
          <div id="mobile-menu" class="hidden lg:hidden mt-8 pt-8 border-t border-gray-200">
            <div class="flex flex-col space-y-6">
              <a href="/jobs" class="text-gray-700 hover:text-red-600 transition-colors duration-200 font-medium py-3 text-lg lg:text-xl">Lowongan Kerja</a>
              <a href="/employers" class="text-gray-700 hover:text-red-600 transition-colors duration-200 font-medium py-3 text-lg lg:text-xl">Perusahaan</a>
              <a href="/career-advice" class="text-gray-700 hover:text-red-600 transition-colors duration-200 font-medium py-3 text-lg lg:text-xl">Karir Tips</a>
              <div class="flex gap-4 pt-6">
                <button class="flex-1 px-6 py-4 text-red-600 bg-red-50 rounded-lg font-medium text-base border border-red-200">
                  Masuk
                </button>
                <button class="flex-1 px-6 py-4 bg-gradient-to-r from-red-600 to-red-700 text-white rounded-lg font-semibold text-base">
                  Daftar
                </button>
              </div>
            </div>
          </div>
        </div>
      </nav>
    </header>

    <main id="main-content">
      <slot />
    </main>

    <footer class="bg-gray-950 text-white border-t border-gray-800">
      <div class="container mx-auto px-6 py-16 lg:py-20">
        <div class="max-w-7xl mx-auto">
          <!-- Main Footer Content -->
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 mb-16">
            <!-- Company Info -->
            <div class="lg:col-span-1">
              <div class="flex items-center gap-3 mb-6">
                <div class="w-10 h-10 bg-gradient-to-br from-red-600 to-red-700 rounded-xl flex items-center justify-center shadow-lg">
                  <svg class="w-6 h-6 text-white" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 2L2 7v10c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-10-5z"/>
                  </svg>
                </div>
                <span class="text-2xl font-bold bg-gradient-to-r from-red-600 to-red-700 bg-clip-text text-transparent">
                  Megawe
                </span>
              </div>
              <p class="text-gray-400 leading-relaxed mb-6">
                Platform aggregator lowongan kerja terpercaya di Indonesia. Menghubungkan talenta terbaik dengan perusahaan ternama.
              </p>
              <!-- Social Media Links -->
              <div class="flex gap-3">
                <a href="#" class="w-10 h-10 bg-gray-800 hover:bg-red-600 rounded-lg flex items-center justify-center transition-colors duration-200" aria-label="Facebook">
                  <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                  </svg>
                </a>
                <a href="#" class="w-10 h-10 bg-gray-800 hover:bg-red-600 rounded-lg flex items-center justify-center transition-colors duration-200" aria-label="LinkedIn">
                  <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                </a>
                <a href="#" class="w-10 h-10 bg-gray-800 hover:bg-red-600 rounded-lg flex items-center justify-center transition-colors duration-200" aria-label="Twitter">
                  <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                  </svg>
                </a>
              </div>
            </div>

            <!-- Quick Links -->
            <div>
              <h3 class="text-lg font-bold text-white mb-6">Untuk Job Seekers</h3>
              <ul class="space-y-4">
                <li>
                  <a href="/jobs" class="text-gray-400 hover:text-red-400 transition-colors duration-200 font-medium">
                    Cari Lowongan
                  </a>
                </li>
                <li>
                  <a href="/karir" class="text-gray-400 hover:text-red-400 transition-colors duration-200 font-medium">
                    Karir Tips
                  </a>
                </li>
                <li>
                  <a href="/companies" class="text-gray-400 hover:text-red-400 transition-colors duration-200 font-medium">
                    Perusahaan
                  </a>
                </li>
                <li>
                  <a href="/upload-cv" class="text-gray-400 hover:text-red-400 transition-colors duration-200 font-medium">
                    Upload CV
                  </a>
                </li>
              </ul>
            </div>

            <!-- For Employers -->
            <div>
              <h3 class="text-lg font-bold text-white mb-6">Untuk Perusahaan</h3>
              <ul class="space-y-4">
                <li>
                  <a href="/employers" class="text-gray-400 hover:text-red-400 transition-colors duration-200 font-medium">
                    Daftar Perusahaan
                  </a>
                </li>
                <li>
                  <a href="/employers/post-job" class="text-gray-400 hover:text-red-400 transition-colors duration-200 font-medium">
                    Pasang Lowongan
                  </a>
                </li>
                <li>
                  <a href="/employers/pricing" class="text-gray-400 hover:text-red-400 transition-colors duration-200 font-medium">
                    Harga
                  </a>
                </li>
                <li>
                  <a href="/employers/resources" class="text-gray-400 hover:text-red-400 transition-colors duration-200 font-medium">
                    Resources
                  </a>
                </li>
              </ul>
            </div>

            <!-- Company Info -->
            <div>
              <h3 class="text-lg font-bold text-white mb-6">Informasi</h3>
              <ul class="space-y-4">
                <li>
                  <a href="/tentang-kami" class="text-gray-400 hover:text-red-400 transition-colors duration-200 font-medium">
                    Tentang Kami
                  </a>
                </li>
                <li>
                  <a href="/hubungi-kami" class="text-gray-400 hover:text-red-400 transition-colors duration-200 font-medium">
                    Kontak
                  </a>
                </li>
                <li>
                  <a href="/kebijakan-privasi" class="text-gray-400 hover:text-red-400 transition-colors duration-200 font-medium">
                    Kebijakan Privasi
                  </a>
                </li>
                <li>
                  <a href="/syarat-ketentuan" class="text-gray-400 hover:text-red-400 transition-colors duration-200 font-medium">
                    Syarat & Ketentuan
                  </a>
                </li>
              </ul>
            </div>
          </div>

          <!-- Newsletter Section -->
          <div class="border-t border-gray-800 pt-12 mb-12">
            <div class="max-w-2xl mx-auto text-center">
              <h3 class="text-xl font-bold text-white mb-4">Dapatkan Update Lowongan Terbaru</h3>
              <p class="text-gray-400 mb-6">Berlangganan newsletter kami untuk mendapatkan info lowongan kerja terbaru</p>
              <form class="flex flex-col sm:flex-row gap-3 max-w-md mx-auto">
                <input
                  type="email"
                  placeholder="Email address"
                  class="flex-1 px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-red-600 focus:border-transparent"
                  required
                />
                <button class="px-6 py-3 bg-gradient-to-r from-red-600 to-red-700 text-white rounded-lg hover:from-red-700 hover:to-red-800 transition-all duration-200 font-semibold shadow-lg hover:shadow-xl">
                  Subscribe
                </button>
              </form>
            </div>
          </div>

          <!-- Bottom Section -->
          <div class="border-t border-gray-800 pt-8">
            <div class="flex flex-col md:flex-row justify-between items-center gap-6">
              <div class="text-gray-400 text-center md:text-left">
                <p>&copy; 2025 Megawe. Semua hak dilindungi.</p>
              </div>
              <div class="flex items-center gap-6 text-gray-400 text-sm">
                <span>üáÆüá© Made with ‚ù§Ô∏è in Indonesia</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </footer>

    <!-- GDPR Cookie Consent -->
    <div id="cookie-consent-root"></div>

    <!-- Minimal JavaScript for essential functionality -->
    <script is:inline>
      // Mobile menu toggle
      document.addEventListener('DOMContentLoaded', () => {
        const toggleButton = document.querySelector('[aria-controls="mobile-menu"]');
        const mobileMenu = document.getElementById('mobile-menu');

        if (toggleButton && mobileMenu) {
          toggleButton.addEventListener('click', () => {
            const isExpanded = toggleButton.getAttribute('aria-expanded') === 'true';
            toggleButton.setAttribute('aria-expanded', !isExpanded);
            mobileMenu.classList.toggle('hidden');
          });
        }
      });

      // Performance optimization: Preload critical resources
      if ('serviceWorker' in navigator) {
        // Service worker registration can be added here if needed
      }
    </script>
  </body>
</html>
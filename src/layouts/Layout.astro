      // Enhanced performance monitoring
      if ('performance' in window) {
        window.addEventListener('load', () => {
          const perfData = performance.getEntriesByType('navigation')[0];
          if (perfData && perfData.loadEventEnd - perfData.loadEventStart > 1000) {
            console.warn('Page load time > 1s, consider optimization');
          }
        });
      }

      // Progressive enhancement for mobile menu
      document.addEventListener('DOMContentLoaded', () => {
        // Handle mobile menu if it exists
        const toggleButton = document.querySelector('[aria-controls="mobile-menu"]');
        const mobileMenu = document.getElementById('mobile-menu');

        if (toggleButton && mobileMenu) {
          toggleButton.addEventListener('click', () => {

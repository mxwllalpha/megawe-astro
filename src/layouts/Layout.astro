---
import '../styles/global.css'
import { SITE_TITLE, SITE_DESCRIPTION } from '../lib/constants'
import CookieConsent from '../components/CookieConsent.astro'
import MobileHeader from '../components/MobileHeader.astro'

export interface Props {
  title?: string
  description?: string
  image?: string
  type?: string
  noIndex?: boolean
  canonical?: string
  showMobileHeader?: boolean
  showSocialMeta?: boolean
  structuredData?: any
}

const {
  title = SITE_TITLE,
  description = SITE_DESCRIPTION,
  image = '/images/og-image.jpg',
  type = 'website',
  noIndex = false,
  canonical = Astro.url.pathname,
  showMobileHeader = true,
  showSocialMeta = true,
  structuredData
} = Astro.props

const fullTitle = title === SITE_TITLE ? title : `${title} | ${SITE_TITLE}`
const fullUrl = `https://megawe.net${canonical}`
const imageUrl = `https://megawe.net${image}`

// Enhanced social meta generation
const generateSocialMeta = (pageTitle: string, pageDescription: string, pageImage: string, pageUrl: string) => {
  return {
    // Facebook/LinkedIn
    'og:title': pageTitle,
    'og:description': pageDescription,
    'og:image': pageImage,
    'og:image:width': '1200',
    'og:image:height': '630',
    'og:image:alt': pageTitle,
    'og:url': pageUrl,
    'og:type': type,
    'og:locale': 'id_ID',
    'og:site_name': SITE_TITLE,

    // Twitter/X
    'twitter:card': 'summary_large_image',
    'twitter:title': pageTitle,
    'twitter:description': pageDescription,
    'twitter:image': pageImage,
    'twitter:image:alt': pageTitle,
    'twitter:site': '@megawe_id',
    'twitter:creator': '@megawe_id',

    // WhatsApp optimization
    'og:platform': 'WhatsApp',

    // Indonesian SEO
    'article:author': SITE_TITLE,
    'article:publisher': SITE_TITLE
  }
}

const socialMeta = generateSocialMeta(fullTitle, description, imageUrl, fullUrl)

// Default structured data with Indonesian context
const defaultStructuredData = {
  '@context': 'https://schema.org',
  '@type': type === 'jobposting' ? 'JobPosting' : 'WebSite',
  name: SITE_TITLE,
  description: SITE_DESCRIPTION,
  url: 'https://megawe.net',
  inLanguage: 'id-ID',
  potentialAction: {
    '@type': 'SearchAction',
    target: {
      '@type': 'EntryPoint',
      urlTemplate: 'https://megawe.net/jobs/search?q={search_term_string}',
      inLanguage: 'id-ID'
    },
    'query-input': 'required name=search_term_string'
  },
  publisher: {
    '@type': 'Organization',
    name: 'Megawe',
    url: 'https://megawe.net',
    logo: {
      '@type': 'ImageObject',
      url: 'https://megawe.net/logo.png',
      width: 512,
      height: 512
    },
    address: {
      '@type': 'PostalAddress',
      addressCountry: 'ID',
      addressLocality: 'Jakarta'
    },
    sameAs: [
      'https://www.facebook.com/megawe.id',
      'https://www.linkedin.com/company/megawe',
      'https://www.instagram.com/megawe.id'
    ]
  }
}

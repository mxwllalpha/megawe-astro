---
import '../styles/global.css'
import { SITE_TITLE, SITE_DESCRIPTION } from '../lib/constants'

export interface Props {
  title?: string
  description?: string
  image?: string
  type?: string
  noIndex?: boolean
  canonical?: string
}

const {
  title = SITE_TITLE,
  description = SITE_DESCRIPTION,
  image = '/images/og-image.jpg',
  type = 'website',
  noIndex = false,
  canonical = Astro.url.pathname
} = Astro.props

const fullTitle = title === SITE_TITLE ? title : `${title} | ${SITE_TITLE}`
const fullUrl = `https://megawe.net${canonical}`
const imageUrl = `https://megawe.net${image}`
---

<!doctype html>
<html lang="id" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="canonical" href={fullUrl} />
    {noIndex && <meta name="robots" content="noindex, nofollow" />}

    <!-- Preconnect to external domains -->
    <link rel="preconnect" href="https://api.megawe.net" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Critical CSS inlined -->
    <style>
      :root {
        --color-primary: #0891b2;
        --color-primary-hover: #0e7490;
        --color-secondary: #64748b;
        --color-background: #ffffff;
        --color-surface: #f8fafc;
        --color-text: #1e293b;
        --color-text-light: #64748b;
        --color-border: #e2e8f0;
        --font-sans: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
        --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1);
        --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1);
        --radius: 0.5rem;
        --transition: 150ms ease;
      }

      * {
        box-sizing: border-box;
      }

      html {
        font-family: var(--font-sans);
        line-height: 1.6;
        color-scheme: light;
      }

      body {
        margin: 0;
        background-color: var(--color-background);
        color: var(--color-text);
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        text-rendering: optimizeSpeed;
      }

      img {
        max-width: 100%;
        height: auto;
        display: block;
      }

      a {
        color: var(--color-primary);
        text-decoration: none;
        transition: color var(--transition);
      }

      a:hover {
        color: var(--color-primary-hover);
      }

      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
      }

      .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border: 0;
      }

      .focus-visible:focus {
        outline: 2px solid var(--color-primary);
        outline-offset: 2px;
      }
    </style>

    <!-- SEO Meta Tags -->
    <title>{fullTitle}</title>
    <meta name="title" content={fullTitle} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={imageUrl} />
    <meta property="og:url" content={fullUrl} />
    <meta property="og:type" content={type} />
    <meta property="og:locale" content="id_ID" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={imageUrl} />

    <!-- Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "Megawe",
        "description": "Indonesian Job Vacancy Aggregator",
        "url": "https://megawe.net",
        "inLanguage": "id-ID",
        "publisher": {
          "@type": "Organization",
          "name": "Megawe",
          "url": "https://megawe.net"
        }
      }
    </script>

    <!-- Non-critical CSS deferred -->
    <link rel="stylesheet" href="/styles/components.css" media="print" onload="this.media='all'" />
    <noscript>
      <link rel="stylesheet" href="/styles/components.css" />
    </noscript>
  </head>
  <body>
    <a href="#main-content" class="sr-only focus-visible:not-sr-only">
      Skip to main content
    </a>

    <header>
      <nav class="bg-white shadow-sm" role="navigation" aria-label="Main navigation">
        <div class="container py-4">
          <div class="flex items-center justify-between">
            <a href="/" class="text-xl font-bold text-gray-900 hover:text-cyan-600 transition-colors" aria-label="Megawe Home">
              Megawe
            </a>
            <div class="hidden md:flex items-center space-x-6">
              <a href="/jobs" class="text-gray-600 hover:text-cyan-600 transition-colors">Lowongan</a>
              <a href="/employers" class="text-gray-600 hover:text-cyan-600 transition-colors">Perusahaan</a>
              <a href="/about" class="text-gray-600 hover:text-cyan-600 transition-colors">Tentang</a>
            </div>
            <button
              type="button"
              class="md:hidden p-2 rounded-lg hover:bg-gray-100 transition-colors"
              aria-label="Toggle navigation menu"
              aria-expanded="false"
              aria-controls="mobile-menu"
            >
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </button>
          </div>
          <div id="mobile-menu" class="hidden md:hidden mt-4 pt-4 border-t border-gray-200">
            <div class="flex flex-col space-y-3">
              <a href="/jobs" class="text-gray-600 hover:text-cyan-600 transition-colors">Lowongan</a>
              <a href="/employers" class="text-gray-600 hover:text-cyan-600 transition-colors">Perusahaan</a>
              <a href="/about" class="text-gray-600 hover:text-cyan-600 transition-colors">Tentang</a>
            </div>
          </div>
        </div>
      </nav>
    </header>

    <main id="main-content">
      <slot />
    </main>

    <footer class="bg-gray-900 text-white">
      <div class="container py-12">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <div>
            <h3 className="text-lg font-semibold mb-4">Megawe</h3>
            <p className="text-gray-400">Platform aggregator lowongan kerja terpercaya di Indonesia.</p>
          </div>
          <div>
            <h4 className="text-lg font-semibold mb-4">Perusahaan</h4>
            <ul className="space-y-2">
              <li><a href="/employers" className="text-gray-400 hover:text-white transition-colors">Daftar Perusahaan</a></li>
              <li><a href="/employers/add" className="text-gray-400 hover:text-white transition-colors">Tambah Perusahaan</a></li>
            </ul>
          </div>
          <div>
            <h4 className="text-lg font-semibold mb-4">Lowongan</h4>
            <ul className="space-y-2">
              <li><a href="/jobs" className="text-gray-400 hover:text-white transition-colors">Semua Lowongan</a></li>
              <li><a href="/jobs/search" className="text-gray-400 hover:text-white transition-colors">Pencarian</a></li>
            </ul>
          </div>
          <div>
            <h4 className="text-lg font-semibold mb-4">Informasi</h4>
            <ul className="space-y-2">
              <li><a href="/about" className="text-gray-400 hover:text-white transition-colors">Tentang Kami</a></li>
              <li><a href="/privacy" className="text-gray-400 hover:text-white transition-colors">Kebijakan Privasi</a></li>
              <li><a href="/terms" className="text-gray-400 hover:text-white transition-colors">Syarat & Ketentuan</a></li>
            </ul>
          </div>
        </div>
        <div className="border-t border-gray-800 mt-8 pt-8 text-center text-gray-400">
          <p>&copy; 2025 Megawe. Semua hak dilindungi.</p>
        </div>
      </div>
    </footer>

    <!-- Minimal JavaScript for essential functionality -->
    <script is:inline>
      // Mobile menu toggle
      document.addEventListener('DOMContentLoaded', () => {
        const toggleButton = document.querySelector('[aria-controls="mobile-menu"]');
        const mobileMenu = document.getElementById('mobile-menu');

        if (toggleButton && mobileMenu) {
          toggleButton.addEventListener('click', () => {
            const isExpanded = toggleButton.getAttribute('aria-expanded') === 'true';
            toggleButton.setAttribute('aria-expanded', !isExpanded);
            mobileMenu.classList.toggle('hidden');
          });
        }
      });

      // Performance optimization: Preload critical resources
      if ('serviceWorker' in navigator) {
        // Service worker registration can be added here if needed
      }
    </script>
  </body>
</html>
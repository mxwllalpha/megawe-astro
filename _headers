# Comprehensive security headers
/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: camera=(), microphone=(), geolocation=(), payment=(), usb=(), magnetometer=(), gyroscope=(), accelerometer=()
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload

  # Content Security Policy - Enhanced without unsafe-inline
  Content-Security-Policy: default-src 'self'; script-src 'self' https://api.megawe.net; style-src 'self' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://api.megawe.net; frame-ancestors 'none'; form-action 'self' https://api.megawe.net; base-uri 'self'; manifest-src 'self'; worker-src 'none'; object-src 'none'; base-uri 'self';

  # Additional security headers
  Cross-Origin-Embedder-Policy: require-corp
  Cross-Origin-Opener-Policy: same-origin
  Cross-Origin-Resource-Policy: same-origin
  Expect-CT: max-age=86400, enforce

  # Remove server information
  Server: ""
  X-Powered-By: ""

# Performance-optimized caching
/_astro/*
  Cache-Control: public, max-age=31536000, immutable

/images/*
  Cache-Control: public, max-age=31536000, immutable

/static/*
  Cache-Control: public, max-age=31536000, immutable

/fonts/*
  Cache-Control: public, max-age=31536000, immutable

/assets/*
  Cache-Control: public, max-age=31536000, immutable

# HTML pages - immediate revalidation for fresh content
/*.html
  Cache-Control: public, max-age=0, must-revalidate, s-maxage=300

# External API calls - stale-while-revalidate for resilience
/api/*
  Cache-Control: public, max-age=300, stale-while-revalidate=60, s-maxage=600

# Performance and compression headers
/*
  Vary: Accept-Encoding, Accept
  Server-Timing: cf;dur=1
  X-DNS-Prefetch-Control: on